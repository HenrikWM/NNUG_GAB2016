@using GAB.Core.Domain

@model Ansatt

@{
    ViewBag.Title = "Opprett";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ansatt</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Navn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Navn)
                @Html.ValidationMessageFor(model => model.Navn)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Rolle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.Rolle, "Velg en rolle", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Rolle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Avdeling, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Avdeling)
                @Html.ValidationMessageFor(model => model.Avdeling)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opprett" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbake til listen", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
